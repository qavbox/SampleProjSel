pipeline {
	agent any
	parameters {
      string defaultValue: '', description: 'select a browser', name: 'browser', trim: false
    }

tools
{
	maven 'maven_home'
}
stages
{
	stage('checkout')
	{
		steps{
		    echo "checkingout"
		    echo "${params.browser}"
            git credentialsId: '{{secrets.GITCREDID}}', url: 'https://github.com/qavbox/SampleProjSel.git'
		}
	}
	stage('Test')
	{
		steps
		{
			echo "Test"
			sh 'mvn test'
		}
	}
	stage('artifact')
    {
    	steps
    	{
    		echo "artifact"
    		archiveArtifacts artifacts: 'ExtentTestReport/*.html','target/surefire-reports/emailable-report.html'
    	}
    }
	stage('Deploy')
	{
		steps
		{
		    echo "Deploy"
		}
 	}
}
}